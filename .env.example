# Redis配置（未开发）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Token配置（逗号分隔）
# 此处的 Token 为永久有效
AUTH_TOKENS=["AdminToken"]
# 通过接口获取的 token 的有效期，30天（秒）
TOKEN_EXPIRATION_TIME=2592000

# 应用配置
# 验证码默认有效期，单位：秒
DEFAULT_SMS_CODE_TTL=300
# 验证码最大读取次数
MAX_SMS_CODE_READ_COUNT=3
LOG_LEVEL=INFO

# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=false

# 文件存储
TOKENS_FILE_PATH=config/tokens.yaml
LOGS_DIRECTORY=logs

# 安全配置
ALLOWED_ORIGINS=["*"]
# API 前缀
API_PREFIX=/sms_agent
# 是否启用 token 相关的接口
ENABLE_ROUTER_TOKENS=false
# 是否隐藏 API 文档
HIDE_API_DOCS=true

# 清理配置
CLEANUP_INTERVAL=3600
